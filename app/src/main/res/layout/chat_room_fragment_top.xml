<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center|end"
    tools:showIn="@layout/chat_room_fragment">


    <com.yyj.stydyroom.study.util.NonScrollViewPager
        android:id="@+id/new_chat_room_viewpager_top"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <com.netease.lava.nertc.sdk.video.NERtcVideoView
        android:id="@+id/vv_local_user"
        android:layout_height="match_parent"
        android:layout_width="match_parent">

    </com.netease.lava.nertc.sdk.video.NERtcVideoView>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="2dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_share_screen"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginBottom="4dp"
                android:background="@drawable/chat_room_gray_round_selector"
                android:gravity="center"
                android:lines="2"
                android:text="屏幕\n共享"
                android:textColor="@color/white"
                android:textSize="12sp"
                tools:visibility="visible" />

            <TextView
                android:id="@+id/tv_show_video"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginBottom="4dp"
                android:background="@drawable/chat_room_gray_round_selector"
                android:gravity="center"
                android:lines="2"
                android:text="视频"
                android:textColor="@color/white"
                android:textSize="12sp"
                tools:visibility="visible" />


        </LinearLayout>


    </RelativeLayout>


</FrameLayout>

